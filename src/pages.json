{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/pinia/index",
      "style": {
        "navigationBarTitleText": "pinia"
      }
    },
    {
      "path": "pages/axios/index",
      "style": {
        "navigationBarTitleText": "Axios（网络请求示例）"
      }
    },
    {
      "path": "pages/uview/index",
      "style": {
        "navigationBarTitleText": "uView 示例组件"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "easycom": {
    "custom": {
      "^u-(.*)": "vk-uview-ui/components/u-$1/u-$1.vue"
    }
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#333333",
    "backgroundColor": "#fff",
    "borderStyle": "black",
    "height": "50px",
    "fontSize": "12px",
    "spacing": "5px",
    "iconWidth": "22px",
    "list": [
      {
        "pagePath": "pages/pinia/index",
        "text": "pinia",
        "iconPath": "/static/newHome/home.png",
        "selectedIconPath": "/static/newHome/home_active.png"
      },
      {
        "pagePath": "pages/axios/index",
        "text": "axios",
        "iconPath": "/static/newHome/message.png",
        "selectedIconPath": "/static/newHome/message_active.png"
      },
      {
        "pagePath": "pages/uview/index",
        "text": "uview",
        "iconPath": "/static/newHome/mine.png",
        "selectedIconPath": "/static/newHome/mine_active.png"
      }
    ]
  }
}
